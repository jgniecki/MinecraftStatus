{
    "name": "dev-lancer/minecraft-status",
    "type": "library",
    "description": "PHP library to query Minecraft servers",
    "keywords": ["minecraft", "status", "server", "query", "php", "ping", "bedrock", "raknet"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Gniecki",
            "email": "kubuspl@onet.eu"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-iconv": "*"
    },
    "autoload": {
        "psr-4": {
            "DevLancer\\MinecraftStatus\\": "src/"
        },
        "classmap": [
            "src/MinecraftBedrockStatus.php",
            "src/MinecraftJavaPreOld17Status.php",
            "src/MinecraftJavaQuery.php",
            "src/MinecraftJavaStatus.php"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.59"
    }
}
